<h2>All attractions</h2>

<br>
<% if User.find(session[:user_id]).admin %>
    <% @attractions.each do |att| %>
        <%= link_to("Show #{att.name}", attraction_path(att.id)) %><br>
    <% end %>
    <br><%= link_to "New Attraction", new_attraction_path %>
    <% else %>
    <% @attractions.each do |att| %>
        <%= link_to("Go on #{att.name}", attraction_path(att.id)) %> - <%= att.tickets %><br>
    <% end %>
<% end %>